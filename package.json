{
  "name": "xbc-monorepo",
  "private": true,
  "scripts": {
    "dev": "yarn run clean:build && yarn run bootstrap",
    "bootstrap": "lerna bootstrap",
    "clean": "lerna clean && rm -rf node_modules",
    "build": "yarn workspaces run build",
    "publish": "lerna version patch --no-private --yes && lerna publish from-package",
    "test": "lerna run test"
  },
  "devDependencies": {
    "lerna": "^3.22.1"
  },
  "workspaces": {
    "packages": [
      "components",
      "utils"
    ]
  }
}