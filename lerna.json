{
  "packages": [
    "components",
    "utils/*",
    "web/*",
    "docs/*"
  ],
  "command": {
    "create": {
      "license": "MIT"
    },
    "publish": {
      "ignoreChanges": [
        "ignored-file",
        "*.md",
        "web/*",
        "docs/*",
        "tools/*"
      ],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": [],
      "npmClientArgs": [
        "--no-package-lock",
        "--hoist"
      ]
    },
    "version": {
      "allowBranch": [
        "main",
        "test-publish"
      ],
      "conventionalCommits": true
    }
  },
  "version": "0.0.6",
  "npmClient": "yarn",
  "useWorkspaces": true
}
