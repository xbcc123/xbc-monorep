{
  "packages": [
    "components",
    "utils/*"
  ],
  "command": {
    "create": {
      "license": "MIT"
    },
    "publish": {
      "ignoreChanges": ["ignored-file", "*.md"],
      "message": "chore(release): publish"
    },
    "bootstrap": {
      "ignore": [
        "tools/*"
      ],
      "npmClientArgs": [
        "--no-package-lock"
      ]
    },
    "version": {
      "allowBranch": [
        "main",
        "release"
      ]
    }
  },
  "version": "0.0.1",
  "npmClient": "yarn",
  "useWorkspaces": true
}
